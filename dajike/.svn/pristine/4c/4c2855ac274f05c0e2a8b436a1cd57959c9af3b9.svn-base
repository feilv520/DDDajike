@interface DMyCenterViewController ()
{
    DImgButton *_leftBut;
    DImgButton *_rightBut;
    
    NSMutableDictionary     *_userInfoDic;
    UserInfoModel           *_userModel;
    AccountOverViewModel *_accountModel;
}

