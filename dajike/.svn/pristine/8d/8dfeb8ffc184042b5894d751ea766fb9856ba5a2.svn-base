    } else if (btn == self.fiveBtn){
        [self.fiveBtn setTitleColor:DColor_mainRed forState:UIControlStateNormal];
        [self loadingScreen:self.goodsIDString];
        [UIView animateWithDuration:1.0f animations:^{
            
